datasource db {
  provider = "mysql"
  url      = "mysql://root:1234@localhost:3306/ninjadatabase"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @id @default(autoincrement())
  name      String?
  email     String  @unique
  password  String
  firstName String?
  lastName  String?
  company   String?
  position  String?
  phone1    String?
  phone2    String?
  email2    String?
  website1  String?
  website2  String?
  street1   String?
  street2   String?
  zipCode   String?
  city      String?
  state     String?
  country   String?
  bio       String?
  image     Bytes?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
